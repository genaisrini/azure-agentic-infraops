
digraph SimpleWorkflow {
    graph [
        bgcolor="#1a1a2e"
        fontcolor="white"
        fontname="Segoe UI"
        pad="0.4"
        splines="curved"
        nodesep="0.4"
        ranksep="0.5"
        rankdir="LR"
        dpi="150"
    ]
    
    node [
        fontname="Segoe UI"
        fontsize="11"
        fontcolor="white"
        style="filled,rounded"
        shape="box"
        penwidth="0"
        margin="0.2,0.15"
    ]
    
    edge [
        color="#64748b"
        fontcolor="#94a3b8"
        fontname="Segoe UI"
        fontsize="9"
        penwidth="2"
        arrowsize="0.7"
    ]
    
    // Main 6-step workflow nodes
    plan [label="@plan" fillcolor="#0078D4"]
    architect [label="azure-principal-\narchitect" fillcolor="#FF6B35"]
    pre_artifacts [label="Pre-Build\nArtifacts" fillcolor="#8b5cf6" style="filled,rounded,dashed"]
    bicep_plan [label="bicep-plan" fillcolor="#10b981"]
    bicep_implement [label="bicep-implement" fillcolor="#ec4899"]
    post_artifacts [label="Post-Build\nArtifacts" fillcolor="#f4722b" style="filled,rounded,dashed"]
    
    // Governance indicator
    governance [label="ðŸ”’ Governance" fillcolor="#06b6d4"]
    
    // Main flow
    plan -> architect
    architect -> pre_artifacts [style="dashed"]
    architect -> bicep_plan
    pre_artifacts -> bicep_plan [style="dashed"]
    bicep_plan -> bicep_implement
    bicep_implement -> post_artifacts [style="dashed"]
    
    // Governance connection
    governance -> bicep_plan [style="dashed" constraint="false"]
    
    // Layout hints
    {rank=same; governance}
}
